<!DOCTYPE html>
<html lang="en">
    <%- include('./head.ejs') %>
<body class="bg-dark text-light">

    <div class="container pt-4">
       <div class="h3 mb-4">Edit Blog</div>
       <form action="/blogs/edit/<%= blog._id %>?_method=PUT" method="post" >
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" name="title" id="title" value="<%= blog.title %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category:</label>
            <select 
                class="form-select" 
                name="category" 
                id="category" 
                aria-label="Disabled select example" 
                required
                value="<%= blog.category %>"
            >
                <option selected disabled>Choose category</option>
                <option value="Life">Life</option>
                <option value="Health">Health</option>
                <option value="Technology">Technology</option>
                <option value="Sport">Sport</option>
              </select>
        </div>
        <div class="mb-3">
            <label for="text" class="form-label">Text:</label>
           <textarea class="form-control" name="text" id="text" style="resize: none; height: 350px" >
            <%= blog.text %>
        </textarea>
        </div>
        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-primary btn-lg">Publish</button>
            <a href="/blogs/<%=blog.slug%>" class="btn btn-warning btn-lg ms-4">Cancel</a>
        </div>
       </form>
    </div>
    
    <%- include('./footer.ejs') %>
</body>
</html>